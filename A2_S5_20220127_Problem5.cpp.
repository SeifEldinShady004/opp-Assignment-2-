#include <iostream>
#include <map>
using namespace std;
int main() {
    string player;
    int score;
    multimap<int, string> m, m2;
    auto it = m.rbegin();
    auto it2 = m2.rbegin();
    auto it3 = m2.begin();
    cout << "enter the name of the players and their scores."
            "If you want to stop, enter end 0 \n";
    while (cin >> player >> score) {
        if (player == "end")
            break;
        m.insert({score, player});
    }
    for (int i = 0; i < 10; ++i) {
        m2.insert({it->first, it->second});
        it++;
    }
    char option;
    cout << "choose what do you want to do : \n"
            "a:Add a new player and his score \n"
            "b:Print the top 10 players and their scores \n"
            "c:Enter a player name and output that playerâ€™s highest score \n"
            "d:Exit\n";
    cin>>option;
    switch (option) {
        case 'a': {
            string p;
            int s;
            cout << "Enter the player and the score \n";
            cin >> p >> s;
            m.insert({s, p});
            if (s > it3->first) {
                m2.erase(it3);
                m2.insert({s, p});
            }
            break;
        }
        case 'b': {
            for (int i = 0; i < 10; i++) {
                cout << it2->second << " : " << it2->first << "\n";
                it2++;
            }
            break;
        }
        case 'c': {
            string name;
            cout << "Enter the name of the player \n";
            cin >> name;
            int max = 0;
            for (; it2 != m2.rend(); it2++) {
                if (it2->second == name) {
                    if (it2->first > max)
                        max = it2->first;
                };
            }
            if (max > 0)
                cout << "The highest score of this player : "<< max;
            else if(max == 0)
                cout << "The player is not in the top 10 \n";
            break;
        }
    }
}
